{
  "name": "zwtoken",
  "description": "Browser-friendly ZK Wrapper Token with privacy-preserving first receipt tracking",
  "version": "2.0.0",
  "private": true,
  "type": "commonjs",
  "keywords": [
    "zero-knowledge",
    "zk-snark",
    "privacy",
    "ethereum",
    "wrapper-token",
    "poseidon",
    "merkle-tree",
    "groth16"
  ],
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:v1": "hardhat test test/claim.test.js test/commitment.test.js test/e2e.test.js",
    "test:v2": "hardhat test test/claim_v2_e2e.test.js test/commitment_v2.test.js test/e2e_v2.test.js",
    "test:gas": "REPORT_GAS=true hardhat test",
    "circuit:build": "./scripts/build_circuit.sh",
    "deploy": "hardhat run scripts/deploy.js --network hardhat",
    "build-inputs": "node client/build_inputs.js",
    "submit-claim": "node client/submit_claim.js",
    "subgraph:prepare": "node subgraph/scripts/prepare.js",
    "subgraph:copy-abi": "mkdir -p subgraph/abis && cp artifacts/contracts/ZWToken.sol/ZWToken.json subgraph/abis/",
    "subgraph:codegen": "cd subgraph && npm run codegen",
    "subgraph:build": "cd subgraph && npm run build",
    "subgraph:deploy:local": "cd subgraph && npm run deploy:local"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "big-integer": "^1.6.52",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.0.8",
    "ethers": "^6.11.1",
    "hardhat": "^2.22.9",
    "minimist": "^1.2.8",
    "poseidon-solidity": "^0.0.5",
    "rlp": "^3.0.0",
    "snarkjs": "^0.7.0"
  },
  "devDependencies": {
    "@apollo/client": "^4.0.7",
    "cross-fetch": "^4.1.0",
    "graphql": "^16.11.0"
  }
}
